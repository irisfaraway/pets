<div class="row">
  <%= simple_form_for(@pet) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.association :species, include_blank: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'button success' %>
    </div>
  <% end %>
</div>