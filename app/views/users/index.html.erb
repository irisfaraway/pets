<div class="row">
  <h1>All users</h1>
</div>
<div class="row">
  <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Provider</th>
            <th>Uid</th>
            <th>Expires at</th>
            <th>Pet</th>
            <th>Admin</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, user %></td>
              <td><%= user.provider %></td>
              <td><%= user.uid %></td>
              <td><%= user.expires_at %></td>
              <td><% unless user.pet.nil? %>
                <%= link_to user.pet.name, user.pet %>
                <% end %></td>
              <td><%= user.admin %></td>
              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button radius alert tiny' %></td>
            </tr>
          <% end %>
        </tbody>
  </table>
</div>
<div class="row">
  <%= link_to 'Add new user', new_user_path, class: 'button success' %>
</div>