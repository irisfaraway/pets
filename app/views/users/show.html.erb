<div class="row">
  <h1><%= @user.name %> (#<%= @user.id %>)</h1>
</div>
<div class="row">
  <p>
    <strong>Pet:</strong>
    <% unless @user.pet.nil? %>
      <%= link_to @user.pet.name, @user.pet %>
    <% end %>
  </p>

  <p>
    <strong>Admin:</strong>
    <%= @user.admin %>
  </p>

  <p>
    <strong>Joined:</strong>
    <%= @user.created_at.to_date %>
  </p>

  <p>
    <strong>Last modified:</strong>
    <%= @user.updated_at %>
  </p>

  <h2>Authentication</h2>

  <p>
    <strong>Provider:</strong>
    <%= @user.provider %>
  </p>

  <p>
    <strong>UID:</strong>
    <%= @user.uid %>
  </p>

  <p>
    <strong>Token:</strong>
    <%= @user.token %>
  </p>

  <p>
    <strong>Expires at:</strong>
    <%= @user.expires_at %>
  </p>
</div>
<div class="row">
  <%= link_to 'Edit', edit_user_path(@user), class: 'button success' %>
  <%= link_to 'Back', users_path, class: 'button info' %>
</div>